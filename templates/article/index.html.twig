{% extends 'base.html.twig' %}

{% block title %}List of articles{% endblock %}

{% block body %}
<style>
    .article-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }

    .articles { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;}
    .article-row { background: #F5F5F5; padding: 2px 6px; margin-bottom: 30px;}
    .article-row .articles-tags { font-weight: bold;}
</style>

<div class="article-wrapper">
    <h1>List of articles</h1>

    <div class="articles">
        {% for article in articles %}
            <div class="article-row">
                <h4><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a></h4>
                <div>{{ article.description }}</div><br/>
                {{ include('article/articles_tags.html.twig') }}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
